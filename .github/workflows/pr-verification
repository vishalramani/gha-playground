name: PR Verification
on:
  workflow_dispatch:

  pull_request:
    types: [opened, synchronize, reopened, ready_for_review]
    paths-ignore:
      - 'Dockerfile'

  schedule:
    - cron: '30 2,20 * * *'

concurrency: 
  group: ${{ github.head_ref == '' && github.ref || github.head_ref }}
  cancel-in-progress: true

jobs:
  matrix-verification:
    name: Matrix Verification
    runs-on: ubuntu-latest
    strategy:
      matrix:
        job: [non-emulator-verification, emulator-verification]
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Run ${{ matrix.job }}
        run: |
          if [ "${{ matrix.job }}" == "non-emulator-verification" ]; then
            ./.github/workflows/pr-non-emulator-verification.yml
          elif [ "${{ matrix.job }}" == "emulator-verification" ]; then
            ./.github/workflows/pr-emulator-verification.yml
          fi
        continue-on-error: true
      - name: Save ${{ matrix.job }} result
        id: ${{ matrix.job }}-result
        run: echo "::set-output name=result::${{ job.status }}"

  check-results:
    name: Check Results
    runs-on: ubuntu-latest
    needs: matrix-verification
    steps:
      - name: Fail if any job failed
        run: |
          if [[ "${{ needs.matrix-verification.outputs.non-emulator-verification-result.result }}" != "success" || "${{ needs.matrix-verification.outputs.emulator-verification-result.result }}" != "success" ]]; then
            echo "One of the jobs failed"
            exit 1
          fi
